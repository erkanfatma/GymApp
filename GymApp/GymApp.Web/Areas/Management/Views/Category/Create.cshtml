@model Category

<div class="row">
    <div class="col-12">
        <div class="card border-top border-0 border-4 border-dark">
            <div class="card-body p-5">
                <div class="card-title text-center">
                    <h5 class="mb-5 mt-2 text-dark">Kategori Ekle</h5>
                </div>
                <hr>
                <form class="row g-3" method="post">
                    <div class="col-12">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Başlık">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control ckeditor" 
                        placeholder="Açıklama" rows="4"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="col-12">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg px-5">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>